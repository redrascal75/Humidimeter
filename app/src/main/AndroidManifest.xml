<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.school.humidimeter">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Humidimeter">
        <activity
            android:name=".gui.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Humidimeter">
        </activity>
        <activity
            android:name=".gui.SettingsShowActivity"
            android:label="@string/activity_settings_show"
            android:theme="@style/Theme.Humidimeter">
        </activity>
        <activity
            android:name=".gui.SettingsEditActivity"
            android:label="@string/activity_settings_edit"
            android:theme="@style/Theme.Humidimeter">
        </activity>
        <activity
            android:name=".gui.MainActivityInitialize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".logic.ScheduledJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>
    </application>

</manifest>